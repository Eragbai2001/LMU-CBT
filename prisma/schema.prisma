// This is your Prisma schema file
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String    @id @default(uuid())
  name              String
  email             String    @unique
  password          String?
  resetToken        String?   @unique
  resetTokenExpiry  DateTime?
  createdAt         DateTime  @default(now())
}

model PracticeTest {
  id             String            @id @default(cuid())
  title          String
  description    String
  icon           String
  isPopular      Boolean           @default(false)
  questionCount  Int
  duration       Int?
  durationOptions Duration[]       @relation("TestDurations")
  yearOptions    Year[]            @relation("TestYears")
  sessions       PracticeSession[]
  questions      Question[]
}

model Duration {
  id        String            @id @default(cuid())
  minutes   Int
  tests     PracticeTest[]    @relation("TestDurations")
  sessions  PracticeSession[]
}

model Year {
  id        String            @id @default(cuid())
  value     Int
  tests     PracticeTest[]    @relation("TestYears")
  sessions  PracticeSession[]
}

model PracticeSession {
  id           String       @id @default(cuid())
  userId       String
  testId       String
  durationId   String
  yearId       String
  startedAt    DateTime     @default(now())

  test         PracticeTest @relation(fields: [testId], references: [id])
  duration     Duration     @relation(fields: [durationId], references: [id])
  year         Year         @relation(fields: [yearId], references: [id])
}


model Question {
  id             String        @id @default(cuid())
  content        String
  options        String[]
  correctAnswer  String
  solution       String?       // ✅ Optional with ?
  topic          String?       // ✅ Optional with ?
  test           PracticeTest @relation(fields: [testId], references: [id])
  testId         String
}


